{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/routes/**/*.tsx",
        "tailwind.config.ts"
    ],
    "exclude": [
        "node_modules",
        "src/tests/"
    ]
}